<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahesha.zomato.ZomatoActivity">


    <EditText
        android:id="@+id/cityId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pass City Id"
        android:inputType="numberSigned"
        android:maxLength="2"
        app:layout_constraintEnd_toStartOf="@+id/getCollection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Collections"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cityId"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
